{
    "manifest_version": 3,
    "name": "Meet Attendance Tracker",
    "version": "1.0.0",
    "description": "Track participant join/leave times in Google Meet sessions",
    "permissions": [
        "storage",
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://meet.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}